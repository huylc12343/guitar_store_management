<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BottomNavBar.UserNav.UserFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userAvatarFunc"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/shop_logo"
                app:shapeAppearanceOverlay="@style/circular"
                app:strokeColor="@color/red"
                app:strokeWidth="3dp"
                android:clickable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="User"
                android:textStyle="bold"
                android:textSize="@dimen/size30sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="Quang Huy"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingLeft="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="0961264222"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="20dp"
                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="huylc12343@gmail.com"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:paddingLeft="20dp"
                android:layout_marginRight="30dp"
                />
            <ListView
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/userNavListview"/>

        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/black"
            android:textSize="@dimen/size30sp"
            android:textStyle="bold"
            android:text="Đăng xuất" />

    </RelativeLayout>
</FrameLayout>